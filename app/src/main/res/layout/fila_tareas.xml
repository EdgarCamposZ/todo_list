<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvNombreFilaTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:text="Nombre Tarea"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/tvDescripcionFilaTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNombreFilaTarea"
        android:layout_alignStart="@+id/tvNombreFilaTarea"
        android:layout_marginBottom="5dp"
        android:text="Descripcion"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/tvFechaFilaTarea"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescripcionFilaTarea"
        android:layout_alignStart="@+id/tvNombreFilaTarea"
        android:layout_marginStart="0dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:text="Fecha"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <TextView
        android:id="@+id/tvHoraFilaTarea"
        android:layout_width="172dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescripcionFilaTarea"
        android:layout_alignStart="@+id/tvNombreFilaTarea"
        android:layout_marginStart="198dp"
        android:layout_marginTop="15dp"
        android:text="Hora"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

    <Button
        android:id="@+id/btnEditarTarea"
        android:layout_width="194dp"
        android:layout_height="38dp"
        android:layout_below="@+id/tvHoraFilaTarea"
        android:layout_alignEnd="@+id/tvDescripcionFilaTarea"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:background="#1c3d57"
        android:text="Editar Tarea"
        android:textColor="#FFFFFF"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/cbxEstatus"
        android:layout_width="125dp"
        android:layout_height="42dp"
        android:layout_below="@+id/tvHoraFilaTarea"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="46dp"
        android:layout_toStartOf="@+id/btnEditarTarea"
        android:text="Hecho" />
</RelativeLayout>