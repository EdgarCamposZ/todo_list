<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarTarea">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ModificaciÃ³n de  Tarea"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView2"
        android:text="Introduzca la tarea" />

    <EditText
        android:id="@+id/txtNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView3"
        android:ems="10"
        android:hint="Nombre de la tarea"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtNombre"
        android:text="Descripcion de la tarea" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFechaMod"
        android:layout_marginTop="7dp"
        android:text="Estatus" />

    <TextView
        android:id="@+id/txtFechaMod"
        android:layout_width="145dp"
        android:layout_height="30dp"
        android:layout_below="@+id/btnFechaMod"
        android:layout_marginTop="6dp"
        android:text="Fecha de la tarea" />

    <TextView
        android:id="@+id/txtHoraMod"
        android:layout_width="153dp"
        android:layout_height="32dp"
        android:layout_below="@+id/btnHoraMod"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/txtFechaMod"
        android:text="Hora de la tarea" />

    <EditText
        android:id="@+id/txtDescripcion"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="Descripcion"
        android:inputType="text" />
    <Button
        android:id="@+id/btnFechaMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescripcion"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="143dp"
        android:layout_toStartOf="@+id/btnHoraMod"
        android:text="Fecha" />

    <Button
        android:id="@+id/btnHoraMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDescripcion"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="72dp"
        android:text="Hora" />

    <Button
        android:id="@+id/btnGuardarTareaEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbxEstatusMod"
        android:layout_marginTop="15dp"
        android:text="Guardar Tarea" />

    <Button
        android:id="@+id/btnRegresarEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEliminar"
        android:text="Regresar" />

    <Button
        android:id="@+id/btnEliminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnGuardarTareaEditar"
        android:text="Eliminar" />

    <CheckBox
        android:id="@+id/cbxEstatusMod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="1dp"
        android:text="Hecho" />

</RelativeLayout>